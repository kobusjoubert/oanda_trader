- content_for(:title, t('devise.invitations.new.header'))
.row
  .container
    .row
      .col-sm-12
        = devise_error_messages!
    .row
      .col-sm-6.offset-sm-3
        = form_for resource, as: resource_name, url: invitation_path(resource_name), html: { method: :post } do |f|
          - resource.class.invite_key_fields.each do |field|
            .form-group
              = f.text_field field, class: 'form-control', placeholder: field
          .form-group
            = f.submit t('devise.invitations.new.submit_button'), class: 'btn btn-outline-primary'
