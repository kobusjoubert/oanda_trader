- content_for(:title, t('devise.invitations.edit.header'))
.row
  .container
    .row
      .col-sm-12
        = devise_error_messages!
    .row
      .col-sm-6.offset-sm-3
        = form_for resource, as: resource_name, url: invitation_path(resource_name), html: { method: :put } do |f|
          = f.hidden_field :invitation_token
          - if f.object.class.require_password_on_accepting
            .form-group
              = f.password_field :password, class: 'form-control', placeholder: t('devise.invitations.edit.password')
            .form-group
              = f.password_field :password_confirmation, class: 'form-control', placeholder: t('devise.invitations.edit.password_confirmation')
          .form-group
            = f.submit t('devise.invitations.edit.submit_button'), class: 'btn btn-outline-primary'
